  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>SinatraColouringGalleryApp</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>

  <div class="container">
  
    <header>
      <nav>
        <% if logged_in? %>
          <ul>
            <li><a href="/logout">Log Out</a></li>
            <li><a href="/pictures">Colouring Gallery</a></li>
            <li><a href="/pictures/new">New Picture</a></li>
            <li><a href="/my_pictures">My Gallery</a></li>
          </ul>
        <% end %>
      </nav>    
    
    </header>
  
    <div class="wrapper">
      <% if flash[:message] %>
        <h3 style="color: green;"><%= flash[:message] %></h3>
      <% end %>
      <% if flash[:errors] %>
        <h3 style="color: red;"><%= flash[:errors] %></h3>
      <% end %>

        <%= yield %>

      <footer class="branding" style="text-align: center">
        <small>&copy; 2020 <strong>SinatraColouringGalleryApp</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
