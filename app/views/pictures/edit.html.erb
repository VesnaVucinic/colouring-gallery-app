<section id="edit" class="change">
<h2>Edit Picture: </h2>
<form class="" action="/pictures/<%= @picture.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="title">Title:</label>
  <input type="text" name="title" value ="<%= @picture.title %>">
  <label for="description">Description:</label>
  <input type="text" name="description" value="<%= @picture.description %>">
  <label for="name">URL:</label>
  <input type="url" name="image_url" value="<%= @picture.image_url %>">

  <button type="submit">Edit Picture</button>
</form>
</section>
